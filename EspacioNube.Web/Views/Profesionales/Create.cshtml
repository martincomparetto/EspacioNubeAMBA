<h1>Nuevo Profesional</h1>

<div class="row">
    <div class="col-md-6">
        <form action="@Url.Action("Guardar", "Profesionales")" method="post">
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" name="nombre">
            </div>
            <div class="form-group">
                <label for="apellido">Nombre</label>
                <input type="text" class="form-control" name="apellido">
            </div>
            <div class="form-group">
                <label for="especialidad">Especialidad</label>
                <select name="especialidadID">
                    @foreach (var item in EspacioNube.Web.Program.EspecialidadesList)
                    {
                        <option value="@item.ID">@item.Denominacion</option>
                    }
                </select>
            </div>
            <input type="submit" value="Guardar">
        </form>
    </div>
</div>